<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="tests">

<listeners>
<listener class-name="RetryLogic.AnnotationTransformer"></listener>
</listeners>

<parameter name="browser" value="chrome"/>
<parameter name="url" value="https://www.google.com"/>

  <test name ="ChromeTest" enabled ="true">
 <parameter name="browser" value="chrome"/>
  <classes>
      <class name="CrossBrowserTesting.BrowserTesting"/>
      <methods>
      <include name="launchapp"/>
      <include name="search"/>
      </methods>
    </classes>
  </test> <!-- Test -->
  
  <test name ="EdgeTest" enabled = "true">
 <parameter name="browser" value="edge"/>
  <classes>
      <class name="CrossBrowserTesting.BrowserTesting"/>
      <methods>
      <include name="launchapp"/>
      <include name="search"/>
      </methods>
    </classes>
  </test> <!-- Test -->
  
  <test name ="EdgeTest1" enabled = "true">
 <parameter name="browser" value="edge"/>
  <classes>
      <class name="TestNG.datepicker"/>
      <methods>
      <include name="tripDetails"/>
      </methods>
    </classes>
  </test> <!-- Test -->
 </suite> <!-- Suite -->
